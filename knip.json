
{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "index.tsx",
    "app/**/{page,layout,loading,error,not-found,route}.{ts,tsx}",
    "app/api/**/route.ts"
  ],
  "project": ["**/*.{ts,tsx}"],
  "ignore": [
    "**/*.d.ts",
    "next.config.mjs",
    "postcss.config.js",
    "tailwind.config.js",
    "scripts/**"
  ],
  "ignoreDependencies": [
    "sharp", 
    "encoding"
  ],
  "ignoreExportsUsedInFile": true
}
